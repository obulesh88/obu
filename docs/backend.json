{
  "entities": {
    "user": {
      "title": "User",
      "description": "Represents a user in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "profile": {
          "type": "object",
          "description": "User's public profile information.",
          "properties": {
            "displayName": {
              "type": "string",
              "description": "The user's display name."
            },
            "photoURL": {
              "type": "string",
              "format": "uri",
              "description": "The URL of the user's profile picture."
            }
          }
        },
        "wallet": {
          "type": "object",
          "description": "User's wallet and balance information.",
          "properties": {
            "orBalance": {
              "type": "number",
              "description": "The user's balance of OR coins."
            },
            "inrBalance": {
              "type": "number",
              "description": "The user's balance in INR."
            },
            "walletAddress": {
              "type": "string",
              "description": "The user's wallet address."
            }
          }
        }
      },
      "required": ["uid", "email", "profile", "wallet"]
    }
  },
  "auth": {
    "providers": [
      "Email/Password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    }
  }
}
