
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile and wallet information.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "phoneNumber": { "type": "string", "description": "The user's phone number." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp of account creation." },
        "updatedAt": { "type": "string", "format": "date-time", "description": "Timestamp of the last update." },
        "profile": {
          "type": "object",
          "properties": {
            "displayName": { "type": "string" },
            "Uid": { "type": "string" }
          },
          "required": ["displayName", "Uid"]
        },
        "wallet": {
          "type": "object",
          "properties": {
            "orBalance": { "type": "number" },
            "inrBalance": { "type": "number" },
            "walletAddress": { "type": "string" }
          },
          "required": ["orBalance", "inrBalance", "walletAddress"]
        },
        "bankDetails": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "contact": { "type": "string" },
            "email": { "type": "string" },
            "accountNumber": { "type": "string" },
            "ifsc": { "type": "string" }
          }
        },
        "referral": {
          "type": "object",
          "properties": {
            "referralCode": { "type": "string" },
            "referredBy": { "type": ["string", "null"] },
            "referralCount": { "type": "number" },
            "totalReferralEarnings": { "type": "number" }
          },
          "required": ["referralCode", "referralCount", "totalReferralEarnings"]
        },
        "captcha": {
          "type": "object",
          "properties": {
            "is_active": { "type": "boolean" },
            "verifiedAt": { "type": ["string", "null"], "format": "date-time" },
            "claimed": { "type": "boolean" },
            "reward_comm": { "type": "number" }
          }
        },
        "playGames": {
          "type": "object",
          "properties": {
            "is_active": { "type": "boolean" },
            "min_required_seconds": { "type": "number" },
            "play_start": { "type": ["string", "null"], "format": "date-time" },
            "total_play_seconds": { "type": "number" },
            "verifiedAt": { "type": ["string", "null"], "format": "date-time" },
            "claimed": { "type": "boolean" },
            "reward_comm": { "type": "number" },
            "game_id": { "type": ["string", "null"] }
          }
        },
        "watchAds": {
          "type": "object",
          "properties": {
            "ad_provider": { "type": "string" },
            "ad_start": { "type": ["string", "null"], "format": "date-time" },
            "verifiedAt": { "type": ["string", "null"], "format": "date-time" },
            "ad_completed": { "type": "boolean" },
            "reward_comm": { "type": "number" }
          }
        },
        "status": {
          "type": "object",
          "properties": {
            "status": { "type": "string" }
          }
        }
      },
      "required": ["uid", "email", "phoneNumber", "createdAt", "profile", "wallet", "referral"]
    },
    "ReferralRecord": {
      "title": "Referral Record",
      "description": "Tracks a successful referral event.",
      "type": "object",
      "properties": {
        "referralId": { "type": "string" },
        "referrerUid": { "type": "string", "description": "The UID of the person who referred." },
        "referredUid": { "type": "string", "description": "The UID of the newly joined user." },
        "referralCode": { "type": "string", "description": "The code used for the referral." },
        "referralDate": { "type": "string", "format": "date-time", "description": "When the referral occurred." },
        "claimed": { "type": "boolean", "description": "Whether the referrer has claimed the reward." }
      },
      "required": ["referrerUid", "referredUid", "referralCode", "referralDate", "claimed"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores individual user profile data."
    },
    "/referrals/{referralId}": {
      "schema": { "$ref": "#/entities/ReferralRecord" },
      "description": "Historical log of all referral events."
    }
  }
}
