{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "inrBalance": {
          "type": "number",
          "description": "The user's balance in INR."
        },
        "orBalance": {
          "type": "number",
          "description": "The user's balance in OR coins."
        },
        "walletAddress": {
          "type": "string",
          "description": "The user's OR wallet address."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["displayName", "email", "inrBalance", "orBalance", "walletAddress", "createdAt"]
    },
    "task": {
      "title": "Task",
      "description": "Represents a task a user can complete.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "reward": {
          "type": "number"
        },
        "type": {
          "type": "string",
          "enum": ["Survey", "Testing", "Review", "Data Entry", "Other"]
        },
        "status": {
          "type": "string",
          "enum": ["available", "in-progress", "pending-verification", "completed", "rejected"]
        }
      },
      "required": ["title", "description", "reward", "type", "status"]
    },
    "userTask": {
      "title": "User Task",
      "description": "Represents the state of a task for a specific user.",
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["available", "in-progress", "pending-verification", "completed", "rejected"]
        },
        "submittedAt": {
          "type": "string",
          "format": "date-time"
        },
        "completedAt": {
          "type": "string",
          "format": "date-time"
        },
        "evidence": {
          "type": "string"
        }
      },
      "required": ["status"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "Stores public information about a user."
    },
    "/tasks": {
      "schema": {
        "$ref": "#/entities/task"
      },
      "description": "A collection of all available tasks."
    },
    "/users/{userId}/tasks/{taskId}": {
      "schema": {
        "$ref": "#/entities/userTask"
      },
      "description": "A subcollection storing the status of tasks for a user."
    }
  }
}
