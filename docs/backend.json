{
  "entities": {
    "user": {
      "title": "User",
      "description": "Represents a user in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "profile": {
          "type": "object",
          "description": "User's public profile information.",
          "properties": {
            "displayName": {
              "type": "string",
              "description": "The user's display name."
            }
          }
        },
        "wallet": {
          "type": "object",
          "description": "User's wallet and balance information.",
          "properties": {
            "orBalance": {
              "type": "number",
              "description": "The user's balance of OR coins."
            },
            "inrBalance": {
              "type": "number",
              "description": "The user's balance in INR."
            },
            "walletAddress": {
              "type": "string",
              "description": "The user's wallet address."
            }
          }
        }
      },
      "required": ["uid", "email", "profile", "wallet"]
    },
    "earningTransaction": {
      "title": "Earning Transaction",
      "description": "Represents a transaction where a user earned rewards.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who earned the reward."
        },
        "amount": {
          "type": "number",
          "description": "The amount of OR coins earned."
        },
        "type": {
          "type": "string",
          "description": "The type of activity that generated the earning.",
          "enum": ["ad", "captcha", "game"]
        },
        "description": {
          "type": "string",
          "description": "A description of the earning activity."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of the transaction."
        },
        "playTimeInSeconds": {
          "type": "number",
          "description": "The duration in seconds the user played the game for."
        }
      },
      "required": ["userId", "amount", "type", "description", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "Email/Password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": {
        "$ref": "#/entities/earningTransaction"
      },
      "description": "Stores a user's earning transactions."
    }
  }
}
