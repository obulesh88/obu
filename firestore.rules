rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Tasks - everyone can read, only admins can write
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow write: if false; // For now, prevent writes until admin logic is built
    }
    
    // This is a placeholder for user-specific task data.
    // The previous rules had a subcollection here, which we can build out next.
    match /users/{userId}/tasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny for any other collections to keep the database secure.
    // We will add rules for new collections as we build them.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}